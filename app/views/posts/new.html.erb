
<div class="row">
    <div class="col-md-4">
        <h3>Create New Post</h3>
        <%= form_for @post, html: {class: 'form'} do |f| %>
        <div class="form-group">
            <%= f.text_field :title, placeholder: 'Enter title' %>
        </div>
        <div class="form-group">
            <%= f.text_field :link, placeholder: 'Enter link url' %>
        </div>
        <%= f.submit 'Add Post', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>