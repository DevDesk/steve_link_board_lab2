<h1>User login</h1>

<div class="row">
    <div class="col-md-4">
        <%= form_for :user, :url => {:controller => 'sessions', :action => 'create'},html: {class: 'form'} do |f| %>
            <div class="form-group">
                <%= f.text_field :email, :placeholder => 'E-mail address' %>
            </div>
            <div class="form-group">
                <%= f.password_field :password, :placeholder => 'Choose a password' %>
            </div>
            <%= f.submit 'login', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>